<div class="mt-2 p-5">
  <h1 class="mb-5">Đăng Khóa Học </h1>
  <form method="POST" action="/courses/store">

    <div class="form-group">
      <label for="ten">Tên khóa học</label>
      <input type="text" id="name" name="name" class="form-control" />
    </div>

    <div class="form-group">
      <label for="description">Mô tả khóa học</label>
      <input
        type="text"
        id="description"
        name="description"
        class="form-control"
      />
    </div>

    <div class="form-group">
      <label for="Video ID ">Video ID </label>
      <input type="text" id="Video ID" name="video" class="form-control" />
    </div>

    <div class="form-group">
      <label for="level">Trình độ </label>
      <input type="text" id="level" name="level" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>