<div class="mt-2">
  <h1 class="mb-5">Cập nhật Khóa Học </h1>
  <form method="POST" action="/courses/{{course._id}}?_method=PUT">

    <div class="form-group">
      <label for="ten">Tên khóa học</label>
      <input
        type="text"
        id="name"
        name="name"
        class="form-control"
        value="{{course.name}}"
      />
    </div>

    <div class="form-group">
      <label for="description">Mô tả khóa học</label>
      <textarea
        type="text"
        id="description"
        name="description"
        class="form-control"
      >{{course.description}}</textarea>

    </div>

    <div class="form-group">
      <label for="Video ID ">Video ID </label>
      <input
        type="text"
        id="Video ID"
        name="video"
        class="form-control"
        value="{{course.video}}"
      />
    </div>

    <div class="form-group">
      <label for="level">Trình độ </label>
      <input
        type="text"
        id="level"
        name="level"
        class="form-control"
        value="{{course.level}}"
      />
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật khóa học</button>
  </form>
</div>